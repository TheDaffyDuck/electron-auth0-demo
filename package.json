{
  "name": "electron-auth0-demo",
  "productName": "Auth0ElectronDemo",
  "version": "1.0.0",
  "main": "main.js",
  "license": "MIT",
  "type": "commonjs",
  "scripts": {
    "start": "electron .",
    "dist:win": "electron-builder --win portable",
    "dist:mac": "electron-builder --mac dmg",
    "dist:all": "electron-builder -mwl"
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.auth0electrondemo.auth0",
    "productName": "Auth0ElectronDemo",
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/.bin",
      "!**/*.map",
      "!**/*.md",
      "!**/test/**",
      "!**/tests/**",
      "!*.env",
      "!*.env.*"
    ],
    "asar": true,
    "protocols": [
      {
        "name": "Auth Callback",
        "schemes": ["com.example.auth0"],
        "role": "Viewer"
      }
    ],
    "win": {
      "target": "portable"
    },
    "mac": {
      "target": "dmg"
    }
  }
}
